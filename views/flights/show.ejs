<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline:</div>
    <div>
      <%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit flight</button>
      </a>
    </div>
    <div>airport </div>
    <div><%= flight.airport %></div>
    <div>flightNo: </div>
    <div><%= flight.flightNo %></div>
    <div>departs: </div>
    <div><%= flight.departs %></div>
  </section>
<h2>Tickets:</h2>
<form action="/flights/<%= flight.id %>/tickets"
method="POST">
<label for="seat-input">Seat:</label>
<input name="seat" required pattern="[A-F][1-9]\d?">
<label for="price-input">Price:</label>
<input name="price" id="price-input">
<button type="submit">Add Tickets</button>

</form> 
<% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat:</th>
        <th>Price:</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(ticket => { %>
      <tr>
        <td><%= ticket.seat %></td>
        <td><%= ticket.price %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <h3>Your tickets: </h3>
<% } else { %>
  <h3>You have no tickets</h3>
  <% } %>

</main>
  
<%- include('../partials/footer') %>